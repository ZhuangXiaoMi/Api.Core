@using Entity
@using Entity.Enum
@model SysUser

<form asp-action="Add">
    <!-- Add[HttpGet]已经new做了DeptId赋值，需要放一个字段暂存 -->
    <input type="hidden" asp-for="dept_id" />

    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="no"></label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="no" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="account"></label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="account" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="real_name"></label>
        </div>
        <div class="col-md-6">
            <input class="form-control" asp-for="real_name" />
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2 offset-md-2">
            <label asp-for="sex"></label>
        </div>
        <div class="col-md-6">
            <select class="form-control"
                    asp-for="sex"
                    asp-items="Html.GetEnumSelectList<Gender>()">
            </select>
            <input class="form-control" asp-for="sex" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 offset-md-2">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>